<div class='new-playlist-item'>
  <%= simple_form_for [@episode, @playlist], url: admin_episode_playlists_path do |f| %>
    <div class="inline-group">
      <%= f.input :time_marker, label: false, placeholder: 'time', input_html: { class: "input-small" } %>
      <%= f.input :title, label: false, placeholder: "title (of mic break)" %>
    </div>
    <%= f.input :track_id, collection: Track.all.pluck(:title, :id), label: false, placeholder: "track title", input_html: { class: "selectize" }  %>

    <%= f.button :submit, "Save track to playlist", class: 'create-playlist-btn' %>
  <% end %>
  <%= render 'admin/tracks/form' %>
</div>
