<%= simple_form_for [@episode, Playlist.new] do |f| %>
  <%= f.input :time_marker %>
  <%= f.simple_fields_for :track_attributes do |track| %>
    <%= track.input :title %>
    <%= track.input :year %>
    <%= track.simple_fields_for :bands_attributes do |band| %>
      <%= band.input :name, label: 'bands' %>
    <% end %>
    <%= track.simple_fields_for :genres_attributes do |genre| %>
      <%= genre.input :name, label: 'genres' %>
    <% end %>
    <%= track.simple_fields_for :labels_attributes do |label| %>
      <%= label.input :name, label: 'labels' %>
    <% end %>
  <% end %>
  <%= f.submit %>
<% end %>
