<%= simple_form_for [@episode, Playlist.new] do |f| %>
  <%= f.input :time_marker %>
  <%= simple_fields_for :track do |track| %>
    <%= track.input :title %>
    <%= track.input :year %>
    <%= simple_fields_for :band do |band| %>
      <%= band.input :name %>
    <% end %>
    <%= simple_fields_for :genre do |genre| %>
      <%= genre.input :name %>
    <% end %>
    <%= simple_fields_for :label do |label| %>
      <%= label.input :name %>
    <% end %>
  <% end %>
  <%= f.submit %>
<% end %>
