<%= render 'form' %>

<%= simple_form_for [@show, @episode] do |f| %>
  <div id="playlists">
    <%= f.simple_fields_for :playlists do |playlist| %>
      <%= render 'playlist_fields', f: playlist %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'add playlist item', f, :playlists, :wrap_object => Proc.new { |playlist| playlist.build_track; playlist }, class: 'form-add-link' %>
    </div>
  </div>
<% end %>
