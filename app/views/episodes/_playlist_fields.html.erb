<div class="form-inline nested-fields">
  <%= f.input :time_marker, label: false, placeholder: 'time' %>
  <div id="track">
    <%= f.simple_fields_for :track do |track| %>
      <%= render 'track_fields', f: track %>
    <% end %>
    <div class="links">
      <%= link_to_add_association '+ track', f, :track %>
    </div>
  </div>
  <%= link_to_remove_association "remove playlist", f %>
</div>
