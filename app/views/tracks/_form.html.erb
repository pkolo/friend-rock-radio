<div class="modal">
  <%= simple_form_for Track.new do |f| %>
    <h4>Create a new track...</h4>
    <span class="close">&times;</span>
    <%= f.input :title, label: false, placeholder: 'track title', input_html: { class: 'track-title-input' } %>
    <%= f.input :year, label: false, placeholder: 'track year' %>

    <%= f.input :band_ids, collection: Band.all.pluck(:name, :id), label: false, placeholder: 'bands...', input_html: { class: "selectize-sm", multiple: true } %>
    <%= f.button :submit %>
  <% end %>
</div>
